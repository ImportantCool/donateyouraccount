body {
  padding-top: 70px;
  padding-bottom: 40px;
}

#content ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.accounts li{
	margin: 0.5em 0;
}

.alert-warning strong{
	text-transform: uppercase;
}

#campaign{
	width: 65%;
}
#campaign_sidebar{
	width: 33%;
	float: right;
}

.donations li{
	float: left;
	height: 50px;
	width: 50px;
}

#campaign_sidebar h3, #campaign_sidebar h4{
	clear: left;
	margin: 0;
	padding: 0.5em 0;
}

#campaign_sidebar textarea{
	width: 98%;
}

.statuses h3 a{
	color: #333;
}

.messages{
	display: block;
  max-height: 400px;
  overflow-y: scroll;
	cursor: pointer;
}

footer{
	clear:both;
	border-top: 1px solid #eee;
	padding-top: 1em;
	margin: 1em 0;
}

.form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
.followers h3{
  clear: both;
  padding: 1em 0;
}

