body {
  padding-top: 70px;
  padding-bottom: 40px;
}

#content ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.accounts li{
	margin: 0.5em 0;
}

.alert-warning strong{
	text-transform: uppercase;
}

#campaign{
	width: 65%;
}
#campaign_sidebar{
	width: 33%;
	float: right;
}

.donations li{
	float: left;
	height: 50px;
	width: 50px;
}

#campaign_sidebar h3, #campaign_sidebar h4{
	clear: left;
	margin: 0;
	padding: 0.5em 0;
}

#campaign_sidebar textarea{
	width: 98%;
}

.statuses h3 a{
	color: #333;
}

.messages{
	display: block;
  max-height: 400px;
  overflow-y: scroll;
	cursor: pointer;
}

footer{
	clear:both;
	border-top: 1px solid #eee;
	padding-top: 1em;
	margin: 1em 0;
}

.form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
.followers h3{
  clear: both;
  padding: 1em 0;
}

#bannerAd{
  text-align: center;
  margin: 1em 0;
}

#sidebarAd{
  margin: 1em 0;
  text-align: center;
}

.helper{
  color: #999;
}

#payment-form{
    margin: 1em 0;
}

#payment-form .payment-errors{
    margin: 1em 0;
    color: red;
}

#payment-form input{
    width: auto !important;
    display:inline;
}

#payment-form label{
    width: 1em;
    margin-right: 0.5em;
    text-align: right;
}

#payment-form .payment-row{
    margin: 0.5em 0;
}

body.index{
  margin: 0;
  padding: 0;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
  text-rendering: optimizelegibility;
  background: #f0f1f3;
}

.index .section.title{
  background: #333;
  color: #fff;
  background: url('<%=asset_path "crowd.jpg"%>') no-repeat;
  background-size: cover;
  background-position: center;
}

.index .section.title .container{
  padding: 1em 4em;
}

.index .section.title h1{
  text-align: center;
  text-transform: uppercase;
  margin: 0 !important;
  font-weight: bold;
  font-size: 4em;
  padding: 2em 0 0 0;
}

.index .section.title a{
  color: #fff;
  padding: 0.5em;
}

.index .section.title h2{
  margin: 0 !important;
  text-align: center;
  font-weight: 100;
  padding: 1em 0 2em 0;
}

.index .section.title a i{
  margin-right: 4px;
}

.index .section.how{
  background: #fff;
  color: #000;
}

.index .section.how h1{
  text-align: center;
  text-transform: uppercase;
  margin: 0 !important;
  font-weight: bold;
  font-size: 2em;
}

.index .section.how p{
  font-weight: 100;
  line-height: 1.1;
  font-size: 2em;
  margin: 1em 0 0 0;
}

.index .section.how .row {
  padding: 2em 0;
}

.index .section.how .row > div{
  text-align: center;
}

.index .section.how .row .fa{
  font-size: 6em;
  color: #333;
}

.index .section.pitch{
  background: #009900;
  text-align: center;
  padding: 1em 0 2em 0;
  color: #fff;
}

.index .section.pitch h1{
  margin: 1em 0;
}
.index footer{
  text-align: center;
  margin: 1em 0 1em 0;
}