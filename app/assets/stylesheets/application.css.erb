/* 
*= require_self 
*/

body {
  padding-top: 70px;
  padding-bottom: 40px;
  font-size: 12pt;
}

a{
  color: #ff0000;
}

#content ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.accounts li{
	margin: 0.5em 0;
}

.alert-warning strong{
	text-transform: uppercase;
}

#campaign{
	width: 65%;
}
#campaign_sidebar{
	width: 33%;
	float: right;
}

.donations li{
	float: left;
	height: 50px;
	width: 50px;
}

#campaign_sidebar h3, #campaign_sidebar h4{
	clear: left;
	margin: 0;
	padding: 0.5em 0;
}

#campaign_sidebar textarea{
	width: 98%;
}

.statuses h3 a{
	color: #333;
}

.messages{
	display: block;
  max-height: 400px;
  overflow-y: scroll;
	cursor: pointer;
}

footer{
	clear:both;
	padding-top: 1em;
	margin: 1em 0;
  text-align: center;
}

.navbar-brand{
  color: #000;
  text-transform: uppercase;
  font-size: 24px;
}

.navbar-brand .red{
  color: red;
}

.icon-dya-heart{
  width: 50px;
  height: 50px;
  margin-top: -15px;
  background: url('<%=asset_path("dyaHeart50.png")%>') no-repeat;
  display: inline-block;
  float: left;
  line-height: 50px;
  margin-right: 5px;
}

.btn-pro{
  background: red;
  color: #fff;
}

.btn-pro:hover{
  color: #fff;
  background: darkred;
}

.form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
.followers h3{
  clear: both;
  padding: 1em 0;
}

#bannerAd{
  text-align: center;
  margin: 1em 0;
}

#sidebarAd{
  margin: 1em 0;
  text-align: center;
}

.helper{
  color: #999;
}

#payment-form{
    margin: 1em 0;
}

#payment-form .payment-errors{
    margin: 1em 0;
    color: red;
}

#payment-form input{
    width: auto !important;
    display:inline;
}

#payment-form label{
    width: 1em;
    margin-right: 0.5em;
    text-align: right;
}

#payment-form .payment-row{
    margin: 0.5em 0;
}

body.index{
  margin: 0;
  padding: 0;
  font-size: 16px;
  text-rendering: optimizelegibility;
  background: #fff;
}

body.index a{
  color: red;
}

.index .section.title{
  margin: 1em 0;
}

.index .section.title .container{
  background: url('<%=asset_path "dyaHeartText.png"%>') no-repeat;
  background-position: center;
  background-size: contain;
  min-height: 266px;
}

.index .section.title h1{
  display: none;
}

.index .section.how{
  background: #fff;
  color: #000;
}

.index .section.how h1{
  text-align: center;
  text-transform: uppercase;
  margin: 0 !important;
  font-weight: bold;
  font-size: 2em;
}

.index .section.how p{
  font-weight: 100;
  line-height: 1.1;
  font-size: 2em;
  margin: 1em 0 0 0;
}

.index .section.how .row {
  padding: 2em 0;
}

.index .section.how .row > div{
  text-align: center;
}

.index .section.how .row .fa{
  font-size: 6em;
  color: #000;
}

.index .section.pitch{
  background: #009900;
  text-align: center;
  padding: 1em 0 2em 0;
  color: #fff;
}

.index .section.pitch h1{
  margin: 1em 0;
}
.index footer{
  text-align: center;
  margin: 1em 0 1em 0;
}

.start-button{
  text-align: center;
  margin: 1em 0;
}

.start-button a{
  font-size: 36pt;
  padding: 0.5em;
  background: red;
  color: #fff !important;
  font-weight: bold;
  word-wrap: break-word;
}

.start-button a:hover{
  color: #fff !important;
  background-color: darkred;
}

.index .section.copy .container{
  max-width: 600px;
}

.index .section.copy h1{
  font-weight: bold;
  line-height: 1;
}
.index .section.copy  p{
  line-height: 1.1;
  font-size: 16pt;
}

.index .sign-in{
  text-align: center;
}

body.pro{
  margin: 0;
  padding: 0;
  font-size: 16px;
  text-rendering: optimizelegibility;
  background: #fff;
}

.pro .section.title{
  margin: 1em 0;
}

.pro .section.title .container{
  background: url('<%=asset_path "dyaPro.png"%>') no-repeat;
  background-position: center;
  background-size: contain;
  min-height: 266px;
}

.pro .section.title h1{
  display: none;
}

.pro .section.how{
  background: #fff;
  color: #000;
}

.pro .section.how h1{
  text-align: center;
  text-transform: uppercase;
  margin: 0 !important;
  font-weight: bold;
  font-size: 2em;
}

.pro .section.how p{
  font-weight: 100;
  line-height: 1.1;
  font-size: 2em;
  margin: 1em 0 0 0;
}

.pro .section.how .row {
  padding: 2em 0;
}

.pro .section.how .row > div{
  text-align: center;
  padding: 1em 0;
}

.pro .section.how .row .fa{
  font-size: 6em;
  color: #000;
}

.pro .section.pitch{
  background: #000;
  text-align: center;
  padding: 1em 0 2em 0;
  color: #fff;
}

.pro .section.pitch h1{
  margin: 1em 0;
}
.pro footer{
  text-align: center;
  margin: 1em 0 1em 0;
}

.pro-ad h1{
  line-height: 48px;
  margin: 0;
}

.pro-ad img{
  margin-right: 10px;
}

.pro-ad h1 a{
  color: #333;
}

.pro-ad ul{
  margin: 0;
  padding: 0;
  list-style-type: none;
}

.pro-ad ul li{
  float: left;
  line-height: 48px;
  font-size: 36px;
  margin-left: 1em;
}

.pro-ad a.twitter{
  color: #00aced;
}

.pro-ad a.facebook{
  color: #3b5998;
}

.pro-ad-promo{
  text-align: right;
  margin-bottom: 1em;
}

.pro-ad-promo a{
    color: #999;
    text-decoration: underline;
}

.pro-ad{
  margin-bottom: 0;
}

.index.pro-ad{
  margin: 1em 0;
text-align: center;
}

.index.pro-ad p{
  margin: 1em 0;
}

.index.pro-ad h1 a.btn{
  color: #fff !important;
}

@media only screen 
and (min-device-width : 768px) 
and (max-device-width : 1024px)  {
  .index .section.title h1{
    font-size: 3em !important;
  }
  .index .section.title h2{
    font-size: 1.5em !important;
  }
  .pro .section.title{
    background-position: top;
  }
  .pro .section.title h1{
    font-size: 3em !important;
  }
  .pro .section.title h2{
    font-size: 1.5em !important;
    text-shadow: 1px 1px 3px #000033;
  }
}

@media only screen 
and (min-device-width : 320px) 
and (max-device-width : 480px) {
  .index .section.title h1{
    font-size: 2em !important;
  }
  .index .section.title h2{
    font-size: 1.5em !important;
  } 
  .pro .section.title{
    background-position: bottom;
  }
  .pro .section.title h1{
    font-size: 2em !important;
  }
  .pro .section.title h2{
    font-size: 1em !important;
    text-shadow: 1px 1px 3px #000033;
  }
}