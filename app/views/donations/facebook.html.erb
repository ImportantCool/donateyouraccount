<div class="page-header">
  <h1><%=@campaign.name%> <small>Donate Your Account</small></h1>
</div>

<%=form_for @donation, :url => facebook_campaign_donations_path(@campaign), :html => {:class=>"form-horizontal"} do |f|%>
<div class="alert alert-warning">
  Your account will automatically share links posted to <strong><%=link_to @campaign.facebook_page["name"], @campaign.facebook_page["link"], :target => "_blank"%></strong> page on Facebook.
</div>
<div class="control-group">
    <%=f.label :donation_level, :class=>"control-label" %>
    <div class="controls">
<label class="radio">
  <%=f.radio_button :level, Donation::LEVELS["Gold"]%> Gold: 1 retweet per day
</label>
<label class="radio">
  <%=f.radio_button :level, Donation::LEVELS["Silver"]%> Silver: 1 retweet per week
</label>
<label class="radio">
  <%=f.radio_button :level, Donation::LEVELS["Bronze"]%> Bronze: 1 retweet per month
</label>
    </div>
  </div>
<div class="control-group">
    <div class="controls">
      <%=f.submit "Donate Your Facebook Account", :class => "btn btn-success", :confirm => "Are you sure you want to donate shares to #{@campaign.facebook_page["name"]} on Facebook?" %>
    </div>
  </div>
<%end%>