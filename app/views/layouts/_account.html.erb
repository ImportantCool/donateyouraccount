<style type="text/css">
  body{
    <% unless account.profile_background_color.blank?%>
      background-color: #<%=account.profile_background_color%>;
    <%end%>
    <% if account.profile_use_background_image %>
        <% unless account.profile_background_image_url.blank?%>background-image: url(<%=account.profile_background_image_url%>);<% end %>
        <% unless account.profile_background_tile%>background-repeat: no-repeat;<% end %>
    <% else %>
    background-image: none;
    <% end %>
    <% unless account.profile_text_color.blank?%>color: #<%=account.profile_text_color%>;<% end %>
  }
  <% unless account.profile_link_color.blank? %>
  a{color: #<%=account.profile_link_color%>}
  a:hover{color: #<%=account.profile_link_color%>}
  <% end %>
  <% unless account.profile_text_color.blank? %>
  #container #content, #container #content #columns .side{
      color: #<%=account.profile_text_color%>;
  }
  <% end %>
        <% if !account.profile_background_color.blank? and account.profile_background_color == "ffffff" %>
       #footer{color: #000;}
       <% end%>
  <% unless account.profile_sidebar_fill_color.blank? %>
  #container #content #columns .side{
      background: #<%=account.profile_sidebar_fill_color%>;
  }
  <% end %>
  <% unless account.profile_sidebar_border_color.blank? %>
  #container #content #columns .side{
      border-left: 1px solid #<%=account.profile_sidebar_border_color%>;
  }
  #content .side h2{
      border-bottom: 1px solid #<%=account.profile_sidebar_border_color%>;
  }
  <% end %>
</style>